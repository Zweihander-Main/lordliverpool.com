{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/public": true,
		"**/.cache": true,
		"**/node_modules": true,
		"package-lock.json": true
	},
	"vim.useSystemClipboard": true,
	"cSpell.words": [
		"arrowdown",
		"chrono",
		"durationfadein",
		"neumorphic",
		"scalex",
		"scaley",
		"scrollbars",
		"stylelint",
		"Tranent",
		"ultratiny",
		"ultrawide"
	]
}
