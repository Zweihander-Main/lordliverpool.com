		"@types/jest": "^26.0.24",
		"@types/raf-schd": "^4.0.0",
		"@types/react": "^16.9.46",
		"@types/react-dom": "^16.9.8",
		"@types/react-helmet": "^6.1.0",
		"@types/react-test-renderer": "^17.0.1",
		"@types/typography": "^0.16.3",
		"@typescript-eslint/eslint-plugin": "^3.9.0",
		"@typescript-eslint/parser": "^3.9.0",
		"babel-jest": "^26.6.3",
		"babel-preset-gatsby": "^0.5.16",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-graphql": "^4.0.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^4.3.0",
		"identity-obj-proxy": "^3.0.0",
		"is-ci-cli": "^2.2.0",
		"jest": "^27.3.1",
		"jest-runner-eslint": "^1.0.0",
		"jest-runner-prettier": "^0.3.7",
		"jest-runner-stylelint": "^2.3.7",
		"jest-watch-select-projects": "^2.0.0",
		"jest-watch-typeahead": "^1.0.0",
		"netlify-cli": "^2.59.0",
		"prettier": "^2.0.5",
		"react-test-renderer": "^17.0.2",
		"stylelint": "^13.6.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-sass-guidelines": "^7.0.0",
		"stylelint-config-standard": "^20.0.0",
		"ts-graphql-plugin": "^1.12.0",
		"ts-jest": "^27.0.7",
		"tslib": "^2.0.1",
		"typescript": "^4.5.2"
	},
	"scripts": {
		"build": "GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --log-pages",
		"dev": "gatsby clean; gatsby develop",
		"serve": "gatsby clean; gatsby build; gatsby serve -p 8000",
		"test": "is-ci-cli test:coverage test:watch",
		"test:coverage": "jest --coverage --selectProjects \"client\"",
		"test:watch": "jest --watch",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
		"lint": "jest --config=\"jest.config.js\"",
		"lint:ts": "tsc -p .",
		"lint:md": "remark .",
		"netlify": "npm-run-all --parallel test:coverage build && cp -r coverage/lcov-report public/lcov-report",
		"format": "prettier --write \"**/*{js,jsx,ts,tsx,json,md,css,md,scss}\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/lordliverpool.com"
	},
	"eslintConfig": {
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2021,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react",
			"graphql"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"plugin:jsx-a11y/recommended",
			"prettier"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"graphql/template-strings": [
				"error",
				{
					"env": "relay",
					"tagName": "graphql"
				}
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.js",
		"test",
		"cypress",
		"__generated__"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always",
		"editorconfig": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-sass-guidelines",
			"stylelint-config-prettier"
		],
		"rules": {
			"indentation": [
				"tab",
				{
					"ignore": "value"
				}
			],
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
