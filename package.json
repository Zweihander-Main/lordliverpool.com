		"@types/raf-schd": "^4.0.0",
		"@types/react": "^16.9.46",
		"@types/react-dom": "^16.9.8",
		"@types/react-helmet": "^6.1.0",
		"@types/react-test-renderer": "^17.0.1",
		"@types/typography": "^0.16.3",
		"@typescript-eslint/eslint-plugin": "^3.9.0",
		"@typescript-eslint/parser": "^3.9.0",
		"babel-jest": "^26.6.3",
		"babel-preset-gatsby": "^0.5.5",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-graphql": "^4.0.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.6",
		"gatsby-plugin-typescript": "^2.4.18",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"netlify-cli": "^2.59.0",
		"prettier": "^2.0.5",
		"react-test-renderer": "^17.0.2",
		"stylelint": "^13.6.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-sass-guidelines": "^7.0.0",
		"stylelint-config-standard": "^20.0.0",
		"ts-graphql-plugin": "^1.12.0",
		"ts-jest": "^26.5.4",
		"tslib": "^2.0.1",
		"typescript": "^3.9.7"
	},
	"scripts": {
		"build": "GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --log-pages",
		"develop": "gatsby develop",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"start": "npm run develop",
		"serve": "gatsby serve",
		"clean": "gatsby clean",
		"test": "jest",
		"test:watch": "jest --watch",
		"lint": "tsc -p ."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/lordliverpool.com"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2019,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react",
			"graphql"
		],
		"extends": [
			"eslint:recommended",
			"react-app",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"prettier",
			"prettier/@typescript-eslint",
			"prettier/react"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"graphql/template-strings": [
				"error",
				{
					"env": "relay",
					"tagName": "graphql",
					"schemaJson": "src/__generated__/gatsby-introspection.json"
				}
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.js"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always",
		"editorconfig": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-sass-guidelines",
			"stylelint-config-prettier"
		],
		"rules": {
			"indentation": [
				"tab",
				{
					"ignore": "value"
				}
			],
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
