		"@types/jest": "^27.0.3",
		"@types/raf-schd": "^4.0.1",
		"@types/react": "^17.0.37",
		"@types/react-dom": "^17.0.11",
		"@types/react-helmet": "^6.1.4",
		"@types/react-test-renderer": "^17.0.1",
		"@types/typography": "^0.16.4",
		"@typescript-eslint/eslint-plugin": "^5.5.0",
		"@typescript-eslint/parser": "^5.5.0",
		"babel-jest": "^27.4.2",
		"babel-preset-gatsby": "^2.3.0",
		"eslint": "^8.4.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-graphql": "^4.0.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"identity-obj-proxy": "^3.0.0",
		"is-ci-cli": "^2.2.0",
		"jest": "^27.4.3",
		"jest-runner-eslint": "^1.0.0",
		"jest-runner-prettier": "^0.3.7",
		"jest-runner-stylelint": "^2.3.7",
		"jest-watch-select-projects": "^2.0.0",
		"jest-watch-typeahead": "^1.0.0",
		"netlify-cli": "^8.0.15",
		"prettier": "^2.5.0",
		"react-test-renderer": "^17.0.2",
		"stylelint": "^14.1.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"stylelint-config-standard": "^24.0.0",
		"ts-graphql-plugin": "^2.1.5",
		"ts-jest": "^27.0.7",
		"tslib": "^2.3.1",
		"typescript": "^4.5.2"
	},
	"scripts": {
		"build": "GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --log-pages",
		"dev": "gatsby clean; gatsby develop",
		"serve": "gatsby clean; gatsby build; gatsby serve -p 8000",
		"test": "is-ci-cli test:coverage test:watch",
		"test:coverage": "jest --coverage --selectProjects \"client\"",
		"test:watch": "jest --watch",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
		"lint": "jest --config=\"jest.config.js\"",
		"lint:ts": "tsc -p .",
		"lint:md": "remark .",
		"netlify": "npm-run-all --parallel test:coverage build && cp -r coverage/lcov-report public/lcov-report",
		"format": "prettier --write \"**/*{js,jsx,ts,tsx,json,md,css,md,scss}\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/lordliverpool.com"
	},
	"eslintConfig": {
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2021,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react",
			"graphql"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"plugin:jsx-a11y/recommended",
			"prettier"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"graphql/template-strings": [
				"error",
				{
					"env": "relay",
					"tagName": "graphql"
				}
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.js",
		"test",
		"cypress",
		"__generated__"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always",
		"editorconfig": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-sass-guidelines",
			"stylelint-config-prettier"
		],
		"rules": {
			"indentation": [
				"tab",
				{
					"ignore": "value"
				}
			],
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
